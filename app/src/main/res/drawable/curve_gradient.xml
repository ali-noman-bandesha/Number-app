<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">

            <size
                android:width="250dp"
                android:height="100dp" />


        </shape>
    </item>

    <!-- Top WHITE oval shape -->
    <item
        android:left="-25dp"
        android:right="-25dp"
        android:top="-50dp"
        android:bottom="50dp">

        <shape android:shape="oval">
            <gradient
                android:type="linear"
                android:startColor="#6c9e92"
                android:endColor="#588177"
                android:angle="270"
                />
        </shape>
    </item>
</layer-list>